<Window x:Class="Filmobus_test.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filmobus_test"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="720" Width="1080">
    <Grid x:Name="DataGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Save settings" Click="SaveSettings_Click" ></MenuItem>
            <MenuItem Header="Load settings" Click="LoadSettings_Click"></MenuItem>
        </Menu>
    </Grid>
</Window>
